    <p><img src="https://farm8.staticflickr.com/7624/16716195008_557d8e3633.jpg" width="500" height="282" alt="DSCF2840"></p>
    
    
    {% if news %}
        <table>
		{% for article in news %}
                    <ul><li>{{article.title}}<a href="{{path('site_news_article',{slug: article.slug})}}"> Показати...</a></li></ul>
		{% endfor %}
        </table>
    {% endif %}
{% endblock %}   

