{% block post1 %}
        
    {% block post_head1 %}
    <h2><a href="{{path('site_news')}}">Новини</a></h2>        
    {% endblock %}
    <div class="post_info">
                        
        <div class="post_date">
            April 15, 2015
        </div>

        <div class="post_author">
            <a href="#">by Antin</a>
        </div>

        <div class="post_comment">
            <a href="#">184 comments</a>
        </div>

        <div class="cleaner"></div>
